<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--Template for hotel reservation -->
        <template id="report_checkout_qweb">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <br/>
                            <br/>
                            <div class="row">
                                <h2>
                                    <span>
                                        <center>Check-Out Guest List</center>
                                    </span>
                                </h2>
                            </div>
                            <div class="row mt32 mb32">
                                <div class="text-center">
                                    <strong>From:</strong>
                                    <font t-esc="formatLang(data['form']['date_start'],date_time=True)"/>
                                    <strong>To:</strong>
                                    <font t-esc="formatLang(data['form']['date_end'],date_time=True)"/>
                                </div>
                            </div>
                            <br/>
                            <table class="table table-condensed">
                                <thead>
	                                <tr>
	                                    <th>
	                                        <strong>#No</strong>
	                                    </th>
	                                    <th>
	                                        <strong>Guest Name</strong>
	                                    </th>
	                                    <th>
	                                        <strong>Check-Out Date</strong>
	                                    </th>
	                                    <th>
	                                        <strong>Room Type</strong>
	                                    </th>
	                                    <th>
	                                        <strong>Room No</strong>
	                                    </th>
	                                </tr>
                                </thead>
                                <tbody>
	                                <tr t-foreach="get_checkin(data['form']['date_start'],data['form']['date_end'])" t-as="info">
	                                    <td>
	                                        <span t-field="info.reservation_no"/>
	                                    </td>
	                                    <td>
	                                        <span t-field="info.partner_id.name"/>
	                                    </td>
	                                    <td>
	                                        <span t-field="info.checkout"/>
	                                    </td>
	                                    <td>
	                                        <span t-esc="get_room_type(info.reservation_line)"/>
	                                    </td>
	                                    <td>
	                                        <span t-esc="get_room_nos(info.reservation_line)"/>
	                                    </td>
	                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>